<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CatalogueController"
      alignment="center" spacing="10"
      styleClass="root">

    <Button text="All Books" onAction="#allBooks"/>
    <Button text="Available Books" onAction="#availableBooks"/>
    <Button text="Books By Genre" onAction="#booksByGenre"/>
    <Button text="Books By Author" onAction="#booksByAuthor"/>
    <Button text="Borrow Books" onAction="#borrowBooks"/>
    <Button text="Return Books" onAction="#returnBooks"/>
    <Button text="Place Hold" onAction="#placeHold"/>
    <Button text="Exit Catalogue" onAction="#exitCatalogue"/>


    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>